<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activity.RegisActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="25dp"
        android:text="@string/name_Register_title"
        android:gravity="center"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilYourNumber"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="5dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusBottomStart="5dp"
        app:boxCornerRadiusBottomEnd="5dp"
        android:textColorHint="#08DEFA"
        app:boxStrokeColor="@color/shaper_register"
        android:hint="Your Number">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tielYourNumber"
            android:textColor="@color/black"
            android:text="Vu truong giang"
            android:padding="0dp"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilYourName"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="5dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusBottomStart="5dp"
        app:boxCornerRadiusBottomEnd="5dp"
        android:textColorHint="#08DEFA"
        app:boxStrokeColor="@color/shaper_register"
        android:hint="Your Name">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietYourName"
            android:textColor="@color/black"
            android:text="Vu truong giang"
            android:padding="0dp"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCity"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:boxCornerRadiusTopStart="5dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusBottomStart="5dp"
        app:boxCornerRadiusBottomEnd="5dp"
        android:textColorHint="#08DEFA"
        app:boxStrokeColor="@color/shaper_register"
        android:hint="City"
        app:errorEnabled="true">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietCity"
            android:textColor="@color/black"
            android:text="Vu truong giang"
            android:padding="0dp"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDistrict"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        app:boxCornerRadiusTopStart="5dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusBottomStart="5dp"
        app:boxCornerRadiusBottomEnd="5dp"
        android:textColorHint="#8C8787"
        app:boxStrokeColor="@color/shaper_register"
        android:hint="Your Number">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietDistrict"
            android:textColor="@color/black"
            android:text="Vu truong giang"
            android:padding="0dp"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="5dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusBottomStart="5dp"
        app:boxCornerRadiusBottomEnd="5dp"
        android:textColorHint="#8C8787"
        app:boxStrokeColor="@color/shaper_register"
        android:hint="Your Number"
        app:hintTextColor="#08DEFA">
        <com.google.android.material.textfield.TextInputEditText
            android:textColor="@color/black"
            android:text="Vu truong giang"
            android:padding="0dp"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusTopStart="5dp"
        app:boxCornerRadiusTopEnd="5dp"
        app:boxCornerRadiusBottomStart="5dp"
        app:boxCornerRadiusBottomEnd="5dp"
        android:textColorHint="#08DEFA"
        app:boxStrokeColor="@color/shaper_register"
        android:hint="Your Number">
        <com.google.android.material.textfield.TextInputEditText
            android:textColor="@color/black"
            android:text="Vu truong giang"
            android:padding="0dp"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>