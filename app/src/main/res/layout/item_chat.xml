<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_chat_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/vien_chat"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="alo giang 123 hoho"
        android:textSize="30dp"/>
    <ImageView
        android:id="@+id/imgSendImage"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="200dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvDataImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="40dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_time_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:text="09/8/2021 9:10"
        android:textSize="10dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:visibility="gone" />
</LinearLayout>