<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE6B1"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activity.ThongBaoActivity">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideThongBao01"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideThongBao02"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideThongBao03"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideThongBao04"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideThongBao03"
            app:layout_constraintBottom_toBottomOf="@id/guideThongBao01"
            app:layout_constraintEnd_toEndOf="@id/guideThongBao04">
            <ImageView
                android:id="@+id/but_back_giohang"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_back"
                android:layout_gravity="center"/>
            <TextView
                android:text="Thông Báo"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dataThongBao"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideThongBao01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideThongBao02"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>