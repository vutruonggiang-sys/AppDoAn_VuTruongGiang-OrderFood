<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen_forgetpass"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.activity.ForgetPasswordActivity">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_forgetpass01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_forgetpass02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_forgetpass04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_forgetpass03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guide_forgetpass01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guide_forgetpass02"
            app:layout_constraintEnd_toEndOf="parent">
            <EditText
                android:id="@+id/edEmail"
                android:hint="Nhập Số Điện Thoại"
                android:paddingLeft="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/vien_vuong_number"
                android:alpha="0.5"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center|left"/>
            <Button
                android:id="@+id/but_send_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/thu_email"
                android:layout_gravity="center|right"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guide_forgetpass02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guide_forgetpass04"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_toLeftOf="@id/edXacNhanMa"
                android:text="Nhập Mã: "
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <EditText
                android:id="@+id/edXacNhanMa"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:alpha="0.5"
                android:background="@drawable/vien_vuong_number"
                android:hint="Nhập Số Điện Thoại"
                android:paddingLeft="20dp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/GroupChangePass"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/guide_forgetpass04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guide_forgetpass03"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Mời Bạn Nhập Thay Đổi Mật Khẩu"
                android:textStyle="bold"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Mật khẩu mới: "
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edNewPass"
                    android:hint="Nhập Số Điện Thoại"
                    android:paddingLeft="20dp"
                    android:background="@drawable/vien_vuong_number"
                    android:alpha="0.5"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Mật khẩu mới: "
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/edConfirmNewPass"
                    android:hint="Nhập Số Điện Thoại"
                    android:paddingLeft="20dp"
                    android:background="@drawable/vien_vuong_number"
                    android:alpha="0.5"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_back_login"
            android:textColor="@color/black"
            android:text="@string/quayvetrangchu"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guide_forgetpass03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>